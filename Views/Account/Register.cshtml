@model RegisterViewModel
@{
    Layout = "~/Views/Shared/_Account.cshtml";
}


<form asp-controller="Account" asp-action="Trying_Register" method="post">

     <div asp-validation-summary="All"></div>

    <label asp-for="Name"></label><br>
    <input asp-for="Name" /><br>
    <span asp-validation-for="Name" ></span><br>

    <label asp-for="Email"></label><br>
    <input asp-for="Email" /><br>
    <span asp-validation-for="Email"></span><br>

    <label asp-for="Password"></label><br>
    <input asp-for="Password" /><br>
    <span asp-validation-for="Password"></span><br>

    <label asp-for="ConfirmPassword"></label><br>
    <input asp-for="ConfirmPassword" /><br>
    <span asp-validation-for="ConfirmPassword"></span><br>

    <input type="submit" value="Register" /><br>


</form>